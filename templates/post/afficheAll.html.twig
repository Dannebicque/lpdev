{% extends 'base.html.twig' %}

{% block body %}
<h1>Mes posts</h1>

    {% for category in categories %}
        <h1>{{ category.title }}</h1>
        {% for post in category.posts %}
            <h2>{{ post.title }}</h2>
            <p>{{ post.content }}</p>
            <p>{{ post.dateCreated|date('d/m/Y') }}</p>
            <hr>
        {% endfor %}
    {% endfor %}
{% endblock %}

